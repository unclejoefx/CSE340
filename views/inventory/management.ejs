<div class="invManagementView">
    <% if (title) { %>
    <h1 class="vehManage"><%= title %></h1>
    <% } else {
    res.redirect('/')
    } %>

    <div class="danger-msg">  <%- messages() %></div>
    <!-- Flash message -->
    <% if (locals.flashMessage) { %>
    <div class="flash-message">
        <%= flashMessage %>
    </div>
    <% } %>

    <ul class="invAdd">
        <li><a href="/inv/add-classification/" title="Click to add a new vehicle">Add New Classification</a></li>
        <li><a href="/inv/add-inventory/" title="Click to add a new vehicle">Add New Inventory</a></li>
    </ul>

    <h2 class="ManageInventory">Manage Inventory</h2>
    <p class="invItems">Choose a classification to see those inventory items.</p>
    <%- classificationSelect %>

    <table id="inventoryDisplay"></table>

    <noscript>JavaScript must be enabled to use this page</noscript>

    <script src="../../js/inventory.js"></script>
</div>