<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/');
} %>

<div class="danger-msg">  <%- messages() %></div><br>

<div class="reg-form">
  <P class="insT">All fields are required.</P>

  <!-- Registration Form -->
  <form action="/account/register" method="post">
    
    <!-- First Name Input -->
    <div class="form-group">
      <label for="account_firstname">First Name:</label>
      <input type="text" name="account_firstname" id="account_firstname"  required value="<%= locals.account_firstname %>">
    </div>

    <!-- Last Name Input -->
    <div class="form-group">
      <label for="account_lastname">Last Name:</label>
      <input type="text" id="account_lastname" name="account_lastname" required value="<%= locals.account_lastname%>">
    </div>

    <!-- Email Input -->
    <div class="form-group">
      <label for="account_email">Email Address:</label>
      <input type="email" name="account_email" id="account_email" required value="<%= locals.account_email %>">
    </div>

    <!-- Password Input with Pattern and Help Text -->
    <div class="form-group">
      <label for="account_password">Password:</label>
      <span>Passwords must be at least 12 characters long and contain at least 1 number, 1 capital letter, and 1 special character.</span>
      <input type="password" id="account_password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" title="Password must be at least 12 characters long, contain at least one uppercase letter, one number, and one special character." required>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Register</button>
  </form>
</div>